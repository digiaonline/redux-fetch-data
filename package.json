{
  "name": "redux-fetch-data",
  "version": "0.1.4",
  "description": "Redux utility library for fetching data using promises on both server and client.",
  "main": "lib/index.js",
  "jsnext:main": "src/index.js",
  "files": [
    "lib",
    "src",
    ".npmignore",
    "LICENSE",
    "README.md",
    "package.json"
  ],
  "scripts": {
    "compile": "babel --loose es6.modules -d lib/ src/",
    "lint": "eslint src test",
    "prepublish": "npm run lint && npm run compile",
    "precommit": "npm-run-all lint test",
    "test": "NODE_ENV=test mocha --compilers js:babel-core/register --require test/index.js --recursive",
    "test:cover": "istanbul cover _mocha -- --compilers js:babel-core/register --require test/index.js --recursive",
    "test:watch": "npm test -- --watch --reporter min"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/nordsoftware/redux-fetch-data.git"
  },
  "keywords": [
    "redux",
    "ssr",
    "promise",
    "async",
    "data",
    "react-component"
  ],
  "author": "Christoffer Niska <christofferniska@gmail.com>",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/nordsoftware/redux-fetch-data/issues"
  },
  "homepage": "https://github.com/nordsoftware/redux-fetch-data#readme",
  "babel": {
    "presets": [
      "stage-2",
      "es2015",
      "react"
    ]
  },
  "peerDependencies": {
    "react": "^15.0.2",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.0",
    "redux": "^3.5.2"
  },
  "devDependencies": {
    "babel-cli": "^6.6.5",
    "babel-core": "^6.7.0",
    "babel-eslint": "^6.0.4",
    "babel-istanbul": "^0.7.0",
    "babel-polyfill": "^6.8.0",
    "babel-preset-es2015": "^6.6.0",
    "babel-preset-react": "^6.5.0",
    "babel-preset-stage-2": "^6.5.0",
    "chai": "^3.5.0",
    "chai-enzyme": "^0.4.2",
    "chai-jsx": "^1.0.1",
    "codeclimate-test-reporter": "^0.3.1",
    "enzyme": "^2.3.0",
    "eslint": "^4.18.2",
    "eslint-plugin-react": "^5.1.1",
    "husky": "^0.13.1",
    "istanbul": "^1.0.0-alpha.2",
    "jsdom": "^9.0.0",
    "mocha": "^2.4.5",
    "react": "^15.0.2",
    "react-addons-test-utils": "^15.0.2",
    "react-dom": "^15.0.2",
    "react-redux": "^4.4.5",
    "react-router": "^2.4.0",
    "redux": "^3.5.2",
    "sinon": "^1.17.4",
    "sinon-chai": "^2.8.0"
  },
  "dependencies": {
    "npm-run-all": "^4.0.1",
    "redux-actions": "^0.9.1"
  }
}
